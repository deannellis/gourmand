extends layout

block content
    .landing__hero-image
        .landing__title
            //- img(src='/public/images/gorumand_wordmark@2x.png')
            h1 Where recipes live
            .landing__title-icon
                .landing__title-icon--left
                i(class="fas fa-utensils")
                .landing__title-icon--right
        img(alt="Baking a Pie, cover photo by Andy Chilton" src="https://images.unsplash.com/photo-1452251889946-8ff5ea7b27ab?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1030&q=80")
    if recipes
        .landing__new-recipes
            h1 Fresh new recipes
            .recipe-cards
                each recipe in recipes
                    .recipe-card
                        a(href=`/recipes/${recipe._id}`)
                            img.recipe-card__image(src=recipe.image alt=recipe.name)
                            .recipe-card__content
                                p= recipe.name
    if !user
        .landing__register
            h1 Sign up and start your new recipe collection
            .button__wrapper
                a(href="/login")
                    button.button--secondary #[i(class="fas fa-user-plus")] Sign up
